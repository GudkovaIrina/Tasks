@model Epam.ListUsers.UI.WebInterface.Models.AwardsModelForToAward

@{
    ViewBag.Title = "Пользователи";
}

<h2>Выберете награду</h2>

<table class="table">
    <tr>
        <th></th>

        <th>
            <span>Награда</span>
        </th>

        <th></th>
    </tr>

@foreach (var item in Model.Awards)
{
    <tr>
        <td>
            <img class="icon" src="@Url.Action("Get", "Award", new { id = @item.Id })" />
        </td>
        <td>
            <p class="data"><em>@item.Title</em></p>
        </td>
        <td>
            @Html.ActionLink("Добавить", "ToAward", new { idUser = Model.IdUser, idAward = item.Id })
        </td>
    </tr>
}
</table>
@Html.ActionLink("Назад к пользователю", "Edit", new { id = Model.IdUser })